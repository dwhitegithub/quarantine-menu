@page
@model QuarantineMenu.Pages.Menus.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Menu.MenuID" />
            <div class="form-group">
                <label  class="control-label">Date</label>
                <input asp-for="Menu.MealDate" class="form-control"  />
                <span asp-validation-for="Menu.MealDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Meal</label>
                @Html.DropDownList("Menu.MealKindID", (IEnumerable<SelectListItem>)ViewBag.MealKinds)
                @*<input asp-for="Menu.MealKindID" class="form-control" />*@
                <span asp-validation-for="Menu.MealKindID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Food</label>
                @Html.DropDownList("Menu.FoodID", (IEnumerable<SelectListItem>)ViewBag.Foods)
                @*<input asp-for="Menu.FoodID" class="form-control" />*@
                <span asp-validation-for="Menu.FoodID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
